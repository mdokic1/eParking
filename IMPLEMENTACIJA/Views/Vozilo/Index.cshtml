@model IEnumerable<EParking.Models.Vozilo>

@{
    ViewData["Title"] = "Index";
}

<div class="landing-section">

    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ModelAuta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrojTablice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrojSasije)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BrojMotora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumRegistracije)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Korisnik)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModelAuta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojTablice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojSasije)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrojMotora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DatumRegistracije)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Korisnik.ImePrezime)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>