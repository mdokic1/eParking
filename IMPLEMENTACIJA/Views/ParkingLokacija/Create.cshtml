@model EParking.Models.ParkingLokacija

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Register</div>
                <div class="card-body">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Naziv" class="control-label"></label>
                            <input asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Adresa" class="control-label"></label>
                            <input asp-for="Adresa" class="form-control" />
                            <span asp-validation-for="Adresa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Lat" class="control-label"></label>
                            <input asp-for="Lat" class="form-control" />
                            <span asp-validation-for="Lat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Long" class="control-label"></label>
                            <input asp-for="Long" class="form-control" />
                            <span asp-validation-for="Long" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Kapacitet" class="control-label"></label>
                            <input asp-for="Kapacitet" class="form-control" />
                            <span asp-validation-for="Kapacitet" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BrojSlobodnihMjesta" class="control-label"></label>
                            <input asp-for="BrojSlobodnihMjesta" class="form-control" />
                            <span asp-validation-for="BrojSlobodnihMjesta" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CjenovnikId" class="control-label"></label>
                            <select asp-for="CjenovnikId" class="form-control" asp-items="ViewBag.CjenovnikId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="VlasnikId" class="control-label"></label>
                            <select asp-for="VlasnikId" class="form-control" asp-items="ViewBag.VlasnikId"></select>
                        </div>
                        <div class="form-group ">
                            <input type="submit" value="Confirm" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
