@model EParking.Models.ParkingLokacija

@{
    ViewData["Title"] = "Edit";
}

    <div class="landing-section">
        <hr />
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Izmjena parking lokacije</div>
                        <div class="card-body">

                            <form asp-action="Edit">

                                <input type="hidden" asp-for="ID" />
                                <input type="hidden" asp-for="BrojSlobodnihMjesta" />
                                <input type="hidden" asp-for="CjenovnikId"/>
                                <input type="hidden" asp-for="VlasnikId"/>
                                <div class="form-group">
                                    <label asp-for="Naziv" class="control-label"></label>
                                    <input asp-for="Naziv" class="form-control" />
                                    <span asp-validation-for="Naziv" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Adresa" class="control-label"></label>
                                    <input asp-for="Adresa" class="form-control" />
                                    <span asp-validation-for="Adresa" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Lat" class="control-label"></label>
                                    <input asp-for="Lat" class="form-control" />
                                    <span asp-validation-for="Lat" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Long" class="control-label"></label>
                                    <input asp-for="Long" class="form-control" />
                                    <span asp-validation-for="Long" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Kapacitet" class="control-label"></label>
                                    <input type="number" min="1" asp-for="Kapacitet" class="form-control" />
                                    <span asp-validation-for="Kapacitet" class="text-danger"></span>
                                </div>
                                <div class="row justify-content-center">
                                    <input type="submit" value="Sačuvaj" class="btn btn-secondary" />
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
