@model IEnumerable<Cjenovnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DnevnaCijenaSat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NocnaCijenaSat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaMjesecneKarte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaGodisnjeKarte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Popust)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DnevnaCijenaSat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NocnaCijenaSat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CijenaMjesecneKarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CijenaGodisnjeKarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popust)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
