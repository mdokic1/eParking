@model Cjenovnik

@{
    ViewData["Title"] = "Edit";
}

    <div class="landing-section">
        <hr />

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Izmjena cjenovnika</div>
                        <div class="card-body">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" value="@Model.ID" asp-for="ID" />
                                <div class="form-group">
                                    <label asp-for="Naziv" class="control-label"></label>
                                    <input asp-for="Naziv" class="form-control" />
                                    <span asp-validation-for="Naziv" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DnevnaCijenaSat" class="control-label"></label>
                                    <input asp-for="DnevnaCijenaSat" class="form-control" />
                                    <span asp-validation-for="DnevnaCijenaSat" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NocnaCijenaSat" class="control-label"></label>
                                    <input asp-for="NocnaCijenaSat" class="form-control" />
                                    <span asp-validation-for="NocnaCijenaSat" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CijenaMjesecneKarte" class="control-label"></label>
                                    <input asp-for="CijenaMjesecneKarte" class="form-control" />
                                    <span asp-validation-for="CijenaMjesecneKarte" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CijenaGodisnjeKarte" class="control-label"></label>
                                    <input asp-for="CijenaGodisnjeKarte" class="form-control" />
                                    <span asp-validation-for="CijenaGodisnjeKarte" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Popust" class="control-label"></label>
                                    <input asp-for="Popust" class="form-control" />
                                    <span asp-validation-for="Popust" class="text-danger"></span>
                                </div>
                                <div class="row justify-content-center">
                                    <input type="submit" value="Sačuvaj" class="btn btn-secondary" />
                                </div>
                            </form>
                                

                        </div>

                    </div>
                </div>
            </div>
        </div>

</div>